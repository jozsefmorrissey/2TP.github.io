{
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "react/no-unused-prop-types": [2, { "skipShapeProps": true }],
    "linebreak-style": 0,
    "no-bitwise": ["error", { "allow": ["<<", "|=", "&="] }],
    "prefer-rest-params": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jasmine": true
  },
  "globals": {
    "Exception": false,
    "angular": false
  }
}
